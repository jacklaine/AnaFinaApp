{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "name": "Run Android on Emulator",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/app/build/outputs/apk/debug/app-debug.apk",
            "externalConsole": true,
            "androidEmulatorPath": "/home/operador/Android/emulator/emulator"
        }
    ]
}